<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the business name TextView -->
    <style name="style_business_title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/_36_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginBottom">@dimen/_16</item>
    </style>

    <!-- Style for the image -->
    <style name="style_image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginBottom">@dimen/_16</item>
    </style>

    <!-- Style for the description text -->
    <style name="style_description" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">@dimen/_22_text_size</item>
        <item name="android:layout_marginBottom">@dimen/_16</item>
        <item name="android:padding">@dimen/_8</item>
    </style>

    <!-- Style for the contact and location header -->
    <style name="style_header" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginBottom">@dimen/_8</item>
    </style>

    <!-- Style for the phone no, email and website -->
    <style name="style_contact_item">
        <item name="android:drawablePadding">@dimen/_8</item>
        <item name="android:layout_marginBottom">@dimen/_8</item>
    </style>

</resources>
